<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="classpath:com/ilan/control/config/factory.xml" />

	<bean id="config" class="com.ilan.control.config.Config"
		scope="singleton">
		<property name="factoryXml">
			<value>com/ilan/control/config/factory.xml</value>
		</property>
		<property name="daoFactoryXml">
			<value>com/ilan/control/config/daoFactory.xml</value>
		</property>
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>
	</bean>

</beans>
