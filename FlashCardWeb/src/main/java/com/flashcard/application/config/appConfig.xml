<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="appConfig"
		class="com.flashcard.application.config.AppConfig" scope="singleton">
		<property name="factoryConfig" ref="factoryConfig"></property>
	</bean>

	<bean id="factoryConfig"
		class="com.flashcard.application.config.FactoryConfig"
		scope="singleton" init-method="init">
		<property name="xmlRootReferer"
			value="com/flashcard/application/config" />
		<property name="addBeansXmlReferer">
			<set>
				<value>daoFactory.xml</value>
				<value>exception.xml</value>
				<value>security.xml</value>
			</set>
		</property>
	</bean>



</beans>
