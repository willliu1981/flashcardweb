<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="idv.fc.mybatis.mapper.VocabularyMapper">
	<insert id="insertVocabulary">
		insert into vocabulary (id,vocabulary,translation,create_date) values
		("v_yellow6","yellow6","黃色6",now())
	</insert>
	<update id="updateVocabulary">
		update vocabulary set translation ="xxx" where id='v_yellow2'
	</update>
	<select id="queryByID" resultType="idv.fc.pojo.Vocabulary">
		select * from vocabulary where id=#{id}
	</select>


	<!-- -->
	<select id="getAllVocabulary" resultType="Vocabulary">
		select * from vocabulary
	</select>
	<select id="checkLogin" resultType="Vocabulary">
		select * from vocabulary where id=#{arg0} and vocabulary=#{arg1}
	</select>
	<select id="checkLoginByMap" resultType="Vocabulary">
		select * from vocabulary where id=#{id} and vocabulary=#{v}
	</select>
</mapper>