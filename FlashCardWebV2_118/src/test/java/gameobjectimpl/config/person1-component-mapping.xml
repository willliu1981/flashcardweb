<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        https://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        https://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        https://www.springframework.org/schema/mvc/spring-mvc.xsd">


	<context:property-placeholder
		location="gameobjectimpl/config/component.properties" />

	<bean id="owner-david" class="java.lang.String">
		<constructor-arg>
			<value>person1</value>
		</constructor-arg>
	</bean>

	<bean id="animatorResolver"
		class="gameobjectimpl.animator.AnimatorResolver" scope="prototype">
		<property name="config"
			value="classpath:gameobjectimpl/config/animator.xml" />
	</bean>

	<bean id="defaultAnimatorResolver"
		class="gameobjectimpl.animator.AnimatorResolver" scope="prototype">
		<property name="config"
			value="classpath:gameobjectimpl/demo/data/defaultdata/default-animator.xml" />
	</bean>


	<bean id="defaultPerson1"
		class="gameobjectimpl.component.impl.Person" scope="prototype"
		init-method="initAnimators">
		<property name="name" ref="owner-david" />
		<property name="layer" value="0" />
		<property name="paintable" value="false" />
		<property name="position" value="100,300" />
		<property name="owner" ref="owner-david" />
		<property name="animatorResolver"
			ref="defaultAnimatorResolver" />
		<property name="animatorBuilder" value="default" />
		<property name="addComponent">
			<list>
				<ref bean="spine" />
			</list>
		</property>
	</bean>


	<bean id="person1" class="gameobjectimpl.component.impl.Person"
		scope="prototype" init-method="initAnimators">
		<property name="name" ref="owner-david" />
		<property name="layer" value="0" />
		<property name="paintable" value="false" />
		<property name="position" value="100,300" />
		<property name="owner" ref="owner-david" />
		<property name="animatorResolver" ref="animatorResolver" />
		<property name="animatorBuilder"
			value="person1AnimatorBuilder" />
		<property name="addComponent">
			<list>
				<ref bean="spine" />
			</list>
		</property>
	</bean>


	<bean id="spine" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.spine}" />
		<property name="layer" value="1" />
		<property name="position" value="0,0" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="body" />
				<ref bean="rfoot1" />
				<ref bean="lfoot1" />
			</list>
		</property>
	</bean>


	<bean id="body" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.body}" />
		<property name="layer" value="2" />
		<property name="position" value="0,-50" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="body2" />
			</list>
		</property>
	</bean>

	<bean id="body2" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.body2}" />
		<property name="layer" value="3" />
		<property name="position" value="0,-50" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="head" />
				<ref bean="rhand1" />
				<ref bean="lhand1" />
			</list>
		</property>
	</bean>

	<bean id="head" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.head}" />
		<property name="layer" value="11" />
		<property name="position" value="0,-75" />
		<property name="owner" ref="owner-david" />
	</bean>

	<bean id="rhand1" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.rhand1}" />
		<property name="layer" value="21" />
		<property name="position" value="50,0" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="rhand2" />
			</list>
		</property>
	</bean>

	<bean id="rhand2" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.rhand2}" />
		<property name="layer" value="22" />
		<property name="position" value="25,50" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="rhand3" />
			</list>
		</property>
	</bean>

	<bean id="rhand3" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.rhand3}" />
		<property name="layer" value="23" />
		<property name="position" value="0,50" />
		<property name="owner" ref="owner-david" />
	</bean>

	<bean id="lhand1" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.lhand1}" />
		<property name="layer" value="31" />
		<property name="position" value="-50,0" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="lhand2" />
			</list>
		</property>
	</bean>

	<bean id="lhand2" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.lhand2}" />
		<property name="layer" value="32" />
		<property name="position" value="-25,50" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="lhand3" />
			</list>
		</property>
	</bean>

	<bean id="lhand3" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.lhand3}" />
		<property name="layer" value="33" />
		<property name="position" value="0,50" />
		<property name="owner" ref="owner-david" />
	</bean>

	<bean id="rfoot1" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.rfoot1}" />
		<property name="layer" value="41" />
		<property name="position" value="25,50" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="rfoot2" />
			</list>
		</property>
	</bean>

	<bean id="rfoot2" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.rfoot2}" />
		<property name="layer" value="42" />
		<property name="position" value="10,75" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="rfoot3" />
			</list>
		</property>
	</bean>

	<bean id="rfoot3" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.rfoot3}" />
		<property name="layer" value="43" />
		<property name="position" value="0,75" />
		<property name="owner" ref="owner-david" />
	</bean>

	<bean id="lfoot1" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.lfoot1}" />
		<property name="layer" value="51" />
		<property name="position" value="-25,50" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="lfoot2" />
			</list>
		</property>
	</bean>

	<bean id="lfoot2" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.lfoot2}" />
		<property name="layer" value="52" />
		<property name="position" value="-10,75" />
		<property name="owner" ref="owner-david" />
		<property name="addComponent">
			<list>
				<ref bean="lfoot3" />
			</list>
		</property>
	</bean>

	<bean id="lfoot3" class="gameobjectimpl.component.impl.Body"
		scope="prototype">
		<property name="name" value="${component.lfoot3}" />
		<property name="layer" value="53" />
		<property name="position" value="0,75" />
		<property name="owner" ref="owner-david" />
	</bean>


</beans>